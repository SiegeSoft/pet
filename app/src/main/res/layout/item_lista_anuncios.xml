<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAnimal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:src="@drawable/pata" />


            <TextView
                android:id="@+id/raca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgAnimal"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="RaÃ§a"
                android:textSize="@dimen/raca"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raca"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Dono"
                android:textSize="@dimen/dono" />

            <TextView
                android:id="@+id/idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dono"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Idade"
                android:textSize="@dimen/dono" />

            <TextView
                android:id="@+id/tipoVenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idade"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Venda"
                android:textSize="@dimen/dono" />


            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tipoVenda"
                android:layout_marginTop="10dp"
                android:text="Horario"
                android:textSize="@dimen/hora" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>