<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f5f5f5">

    <!--LAYOUT ALING STRUCTURE-->
    <RelativeLayout
        android:id="@+id/a0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="#f5f5f5"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/image_conta_perfil"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/cachorro_icons" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a2"
            android:layout_marginTop="28dp"
            android:background="@drawable/background_shadown">

            <TextView
                android:id="@+id/text_conta_usuario_exibicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Nome Exibição"
                android:textColor="#000000"
                android:textSize="18dp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/edit_conta_usuario_exibicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Nome Exibição"
                android:textColor="#000000"
                android:visibility="gone"
                android:textSize="18dp" />

            <Button
                android:id="@+id/OnClickNomeExibicao1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_edit_black_24dp"
                android:backgroundTint="#000000"
                android:textStyle="bold"
                android:onClick="BotaoIniciaNomeExibicao"
                android:visibility="visible"/>

            <Button
                android:id="@+id/OnClickNomeExibicao2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_create_new_folder_black_24dp"
                android:backgroundTint="#000000"
                android:textStyle="bold"
                android:onClick="BotaoCompletaNomeExibicao"
                android:visibility="gone"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a22"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:text="Este não será o seu nome de usuario ou senha. Este será apenas o seu nome que ficará visivel em suas NEGOCIAÇÕES. "
                android:textColor="#a7a7a7"
                android:textSize="18dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>