<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--LAYOUT ALING STRUCTURE-->
    <RelativeLayout
        android:id="@+id/a0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="#f5f5f5"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/image_conta_perfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/andy" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a2"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_shadown">

            <TextView
                android:id="@+id/text_conta_usuario_exibicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Nome Exibição"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_conta_usuario_exibicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Nome Exibição"
                android:textColor="#000000"
                android:visibility="gone"
                android:textSize="18dp" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_edit_black_24dp"
                android:backgroundTint="#000000"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/a10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a22"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:text="Este não será o seu nome de usuario ou senha. Este será apenas o seu nome que ficará visivel em suas NEGOCIAÇÕES. "
                android:textColor="#a7a7a7"
                android:textSize="18dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>