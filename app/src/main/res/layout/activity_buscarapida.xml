

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeImg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <ImageView
            android:id="@+id/imagebuscarapida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:alpha="0.3"
            android:src="@drawable/pata"
            />


        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LATITUDE:"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LONGITUDE:"
            android:gravity="center"
            android:layout_below="@+id/latitude"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CODIGO:"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_below="@+id/longitude"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/atualLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atual Latitude:"
            android:textSize="25sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_below="@+id/codigo"

            android:textStyle="bold" />
        <TextView
            android:id="@+id/atualLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atual Longitude:"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@+id/atualLatitude"/>


        <TextView
            android:id="@+id/raca"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
        android:text="PETNAME"
        android:textSize="40sp"
        android:layout_below="@+id/codigo"
        android:textColor="#F00000"
        android:textStyle="bold" />
    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>

