<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgAnimal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:background="#f5f5f5"
                android:src="@drawable/pata" />


            <TextView
                android:id="@+id/raca"
                android:layout_alignTop="@+id/imgAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="RaÃ§a"
                android:textSize="@dimen/raca"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/codigo"
                android:layout_below="@+id/raca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Codigo"
                android:textSize="@dimen/raca"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/codigo"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Dono"
                android:textSize="@dimen/dono" />

            <TextView
                android:id="@+id/idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dono"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/imgAnimal"
                android:text="Idade"
                android:textSize="@dimen/dono" />



            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/idade"
                android:layout_marginTop="10dp"
                android:text="Horario"
                android:textSize="@dimen/hora"
                android:paddingRight="15dp"
                />

            <ImageView
                android:id="@+id/deletar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_delete"
                android:textAppearance="?android:textAppearanceLarge" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>